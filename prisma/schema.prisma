generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  role      Role     @default(user)
  bookmarks Bookmark[]
}

model OTP {
  id        Int      @id @default(autoincrement())
  email     String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Universitas {
  id                 Int                  @id @default(autoincrement())
  major_count        String?
  pass_percentage    String?
  tuition_fee        String?
  accreditation      String               @map("accreditation")
  address            String               @map("address")
  name               String               @unique @map("name")
  latitude           Float                @map("latitude")
  longitude          Float                @map("longitude")
  acceptanceRate     Float?
  universitasJurusan UniversitasJurusan[]
  bookmarks       Bookmark[]
}

model Jurusan {
  id                 Int                  @id @default(autoincrement())
  nama               String               @unique
  universitasJurusan UniversitasJurusan[]
}

model UniversitasJurusan {
  id            Int         @id @default(autoincrement())
  universitasId Int
  jurusanId     Int
  jurusan       Jurusan     @relation(fields: [jurusanId], references: [id])
  universitas   Universitas @relation(fields: [universitasId], references: [id])

  @@unique([universitasId, jurusanId])
}

enum Role {
  admin
  user
}

model Bookmark {
  id         Int         @id @default(autoincrement())
  user       User        @relation(fields: [userId], references: [id])
  userId     Int
  universitas Universitas @relation(fields: [universitasId], references: [id])
  universitasId Int
  createdAt  DateTime    @default(now())

  @@unique([userId, universitasId]) 
}
